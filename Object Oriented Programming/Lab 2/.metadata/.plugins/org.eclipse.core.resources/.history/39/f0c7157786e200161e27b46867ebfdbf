package edu.scu.coen160.lab2;

// Exercise1.java
class CheckThings {
	public static boolean isItALeapYear(int year) {
		// This method should check if the parameter year is a leap year and
		// return a true.
		// Otherwise a false.

		// A leap year is a year that is divisible by 4 and not by hundred OR
		// it is divisible by 400.
		if ((year % 4 == 0) && (year % 100 != 0)) {
			return true;
		} else if (year % 400 == 0) {
			return true;
		}

		return false;
	}
}

public class Exercise1 {
	public static void tester() {

		CheckThings.isItALeapYear(1716);
		CheckThings.isItALeapYear(1989);
		CheckThings.isItALeapYear(1992);
		CheckThings.isItALeapYear(2000);
		CheckThings.isItALeapYear(2010);
		CheckThings.isItALeapYear(2012);

	}

}
